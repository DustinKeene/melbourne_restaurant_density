{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "title": {
    "text": "Melbourne Restaurant Density (2019-2023)",
    "align": "center",
    "font": "Segoe UI, system-ui, sans-serif",
    "fontSize": 18,
    "offset": 20
  },
  "width": 660,
  "height": 605,
  "padding": {"top": 20},
  "projection": {"type": "mercator"},
  "config": {"background": "transparent"},
  
  "data": {
    "url": "https://raw.githubusercontent.com/DustinKeene/melbourne_restaurant_density/refs/heads/main/js/SA2.json",
    "format": {"type": "topojson", "feature": "SA2"}
  },
  
  "layer": [
    {
      "mark": {
        "type": "geoshape",
        "fill": "lightgray",
        "stroke": "lightgray",
        "strokeWidth": 0.5,
        "fillOpacity": 0.05
      },
      "encoding": {
        "tooltip": [
          {"field": "properties.sa2_name_2021", "type": "nominal", "title": "Area"}
        ]
      }
    },
    {
      "transform": [
        {
          "lookup": "properties.sa2_name_2021",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/DustinKeene/melbourne_restaurant_density/refs/heads/main/Data/final_data_recorded_resto.csv",
              "format": {"type": "csv"}
            },
            "key": "sa_two",
            "fields": ["restaurant_density", "count", "area"]
          }
        },
        {
          "filter": "datum.restaurant_density != null"
        }
      ],
      "mark": {
        "type": "geoshape",
        "stroke": "black",
        "strokeWidth": 0.5,
        "fillOpacity": 0.9
      },
      "encoding": {
        "color": {
          "field": "restaurant_density",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [0.1, 0.5, 1, 3, 9],
            "range": ["#fff5eb", "#fee6ce", "#fdbe85", "#fd8d3c", "#e6550d", "#a63603"]
          },
          "legend": {
            "title": "Restaurants per km²",
            "offset": 5,
            "titleLimit": 200,
            "titleFontSize": 10,
            "padding": 2,
            "labelLimit": 200,
            "titleAlign": "left",
            "orient": "top-right",
            "direction": "vertical"
          }
        },
      "tooltip": [
        {"field": "properties.sa2_name_2021", "type": "nominal", "title": "Area"},
        {"field": "count", "type": "quantitative", "title": "Restaurant Count"},
        {"field": "area", "type": "quantitative", "title": "Area (km²)", "format": ".2f"},
        {"field": "restaurant_density", "type": "quantitative", "title": "Density", "format": ".2f"}
      ],
       "opacity": {
          "condition": {
            "param": "hover",
            "value": 1
          },
          "value": 0.7
        }
      },
      "params": [
        {
          "name": "hover",
          "select": {
            "type": "point",
            "on": "mouseover",
            "clear": "mouseout"
          }
        }
      ]
    }
  ]
}